<body onload="pageLoaded()">
    <div class="container">

        <form action="/game/admingameupdate/<%=game.id%>" method="POST">
            <div class="form-group row">
                <div class="col-xl-6 col-form-label">
                    <label>桌遊種類:</label>
                    <!-- <select name="Game[category]" class="form-control">
                        <option value="">選擇桌遊種類</option>
                        <option value="棋類遊戲">棋類遊戲</option>
                        <option value="卡牌遊戲">卡牌遊戲</option>
                        <option value="骰子遊戲">骰子遊戲</option>
                        <option value="紙筆遊戲">紙筆遊戲</option>
                    </select> -->
                    <input type="text" class="form-control" name="Game[category]" value="<%= game.category %>" required>

                </div>
                <div class="col-xl-6 col-form-label">
                    <label>桌遊名稱:</label>
                    <input type="text" class="form-control" name="Game[gamename]" value="<%= game.gamename %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版社:</label>
                    <input type="text" class="form-control" name="Game[publisher]" value="<%= game.publisher %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>編號:</label>
                    <input type="number" class="form-control" name="Game[serialno]]" value="<%= game.serialno %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>位置:</label>
                    <input type="text" class="form-control" name="Game[location]]" value="<%= game.location %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>相片:</label>
                    <input type="url" class="form-control" name="Game[photo]" value="<%= game.photo %>" required>
                </div>

                <button type="submit" class="btn btn-primary center">修改</button>
            </div>

        </form>


        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>

    </div>
</body>

<script>
    var a = document.querySelector('option[value="<%=game.category%>"]');
    a.selected = "selected";
</script>