<body onload="pageLoaded()">
    <div class="container">


        <h2 class="center">桌上遊戲搜尋</h2>
        <label>種類:</label>
        <form action="/game/vistorgameresult" method="GET">
            <div class="form-group">
                <select name="category" class="form-control" required>
                    <option value="">選擇桌遊種類</option>
                    <option value="棋類遊戲">棋類遊戲</option>
                    <option value="卡牌遊戲">卡牌遊戲</option>
                    <option value="骰子遊戲">骰子遊戲</option>
                    <option value="紙筆遊戲">紙筆遊戲</option>
                </select>
            </div>
            <div class="form-group">
                <label>名稱:</label>
                <input type="string" class="form-control" name="gamename">
            </div>
            <div class="form-group">
                <label>出版商:</label>
                <input type="string" class="form-control" name="publisher">
            </div>
            <div class="form-group">
                <label>編號:</label>
                <input type="string" class="form-control" name="serialno">
            </div>
            <button type="sumbit" class="btn btn-primary center">確認搜尋</button>
            <br>
        </form>

        <div class="row">
            <% game.forEach(function(model) { %>
                <div class="card col-xl-6 col-sm-12">
                    <!-- <div id="title">
                    <a href="/game/vistorgamedetail/<%=model.id%>">詳細資料頁面 </a>
                </div> -->
                    <a href="/game/vistorgamedetail/<%=model.id%>" style="color:darkslategrey">

                        <p></p>
                        <div id="info">
                            <img src=<%=model.photo %> id="photo" width="150" height="150">
                            <ul class="list-group">
                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">名稱:</span>
                                    <%= model.gamename %>
                                </li>

                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">類別:</span>
                                    <%= model.category %>
                                </li>

                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">出版社:</span>
                                    <%= model.publisher %>
                                </li>

                            </ul>
                        </div>
                    </a>
                    <p></p>

                </div>
                <% }); %>

        </div>
        <nav class="bottomnav fixed-bottom">
            <a href="/" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/vistorsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/vistornotlogin" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/vistornotlogin" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>

    </div>
</body>