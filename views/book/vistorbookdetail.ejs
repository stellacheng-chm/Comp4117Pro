<body onload="pageLoaded()">

    <div class="container">
        <div class="row">
            <div class="card col-xl-6">
                <img class="responsive" src=<%=book.photo %>>
            </div>
            <div class="card col-xl-6">
                <table class="table">
                    <tr>
                        <th id="detail" scope="row">位置:
                            <%= book.location%>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">書名:
                            <%= book.bookname %>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">類型:
                            <%=book.category %>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">作者:
                            <%= book.author %>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">出版社:
                            <%=book.publisher %>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">出版年份:
                            <%=book.year %>
                        </th>
                    </tr>
                    <tr>
                        <th id="detail" scope="row">ISBN:
                            <%=book.ISBN %>
                        </th>
                    </tr>

                </table>

            </div>
        </div>
    </div>




    <nav class="bottomnav fixed-bottom">
        <a href="/" class="nav__link">
            <i class="material-icons">
                home
            </i>
            <span class="nav__text">主頁</span>
        </a>
        <a href="/item/vistorsearch" class="nav__link nav__link--active">
            <i class="material-icons">
                search
            </i>
            <span class="nav__text">搜尋</span>
        </a>
        <a href="/" class="nav__link">
            <i class="material-icons">
                email
            </i>
            <span class="nav__text">通知</span>
        </a>
        <a href="/" class="nav__link">
            <i class="material-icons">
                account_circle
            </i>
            <span class="nav__text">帳戶</span>
        </a>
    </nav>
    </div>
</body>