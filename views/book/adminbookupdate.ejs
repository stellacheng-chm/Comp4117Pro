<body onload="pageLoaded()">
    <div class="container">

        <form action="/book/adminbookupdate/<%=book.id%>" method="POST">
            <div class="form-group row">
                <div class="col-xl-6 col-form-label">
                    <label>書本種類:</label>
                    <!-- <select name="Book[category]" class="form-control">
                        <option value="小說">小說</option>
                        <option value="自傳">自傳</option>
                        <option value="心理勵志">心理勵志</option>
                        <option value="圖書">圖書</option>
                    </select> -->
                    <input type="text" class="form-control" name="Book[category]" value="<%= book.category %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>書名:</label>
                    <input type="text" class="form-control" name="Book[bookname]" value="<%= book.bookname %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>作者:</label>
                    <input type="text" class="form-control" name="Book[author]" value="<%= book.author %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版社:</label>
                    <input type="text" class="form-control" name="Book[publisher]" value="<%= book.publisher %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版年份:</label>
                    <input type="number" class="form-control" name="Book[year]" value="<%= book.year %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>ISBN:</label>
                    <input type="number" class="form-control" name="Book[ISBN]" value="<%= book.ISBN %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>位置:</label>
                    <input type="text" class="form-control" name="Book[location]]" value="<%= book.location %>" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>相片:</label>
                    <input type="url" class="form-control" name="Book[photo]" value="<%= book.photo %>" required>
                </div>

                <button type="submit" class="btn btn-primary center">修改</button>
            </div>

        </form>


        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>

    </div>
</body>

<script>
    var a = document.querySelector('option[value="<%=book.category%>"]');
    a.selected = "selected";
</script>