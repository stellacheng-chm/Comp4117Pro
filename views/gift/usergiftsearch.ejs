<body onload="pageLoaded()">
    <div class="container">


        <h2 class="center">禮物搜尋</h2>
        <label>類型:</label>

        <form action="/gift/usergiftresult" method="GET">
            <div class="form-group">
                <select name="category" class="form-control" required>
                    <option value="">選擇禮物種類</option>
                    <option value="小型禮物">小型禮物</option>
                    <option value="中型禮物">中型禮物</option>
                    <option value="大型禮物">大型禮物</option>
                </select>
            </div>
            <div class="form-group">
                <label>名稱:</label>
                <input type="string" class="form-control" name="giftname">
            </div>
            <div class="form-group">
                <label>數量:</label>
                <input type="number" class="form-control" name="amount">
            </div>
            <div class="form-group">
                <label>價值:</label>
                <input type="number" class="form-control" name="value">
            </div>
            <div class="form-group">
                <label>捐贈者:</label>
                <input type="string" class="form-control" name="donator">
            </div>
            <button type="sumbit" class="btn btn-primary center">確認搜尋</button>
            <br>
        </form>

        <div class="row">
            <% gift.forEach(function(model) { %>
                <div class="card col-xl-6 col-sm-12">
                    <!-- <div id="title">
                    <a href="/gift/usergiftdetail/<%=model.id%>" style="color:darkslategrey">詳細資料頁面 </a>
                </div> -->
                    <a href="/gift/usergiftdetail/<%=model.id%>" style="color:darkslategrey">
                        <p></p>
                        <div id="info">
                            <img src=<%=model.photo %> id="photo" width="150" height="150">
                            <ul class="list-group">
                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">名稱:</span>
                                    <%= model.giftname %>
                                </li>

                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">類別:</span>
                                    <%= model.category %>
                                </li>

                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">數量:</span>
                                    <%= model.amount %>
                                </li>

                            </ul>
                        </div>
                    </a>
                    <p></p>

                </div>
                <% }); %>

        </div>
        <nav class="bottomnav fixed-bottom">
            <a href="/item/userindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/usersearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/usernoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/useraccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>
</body>